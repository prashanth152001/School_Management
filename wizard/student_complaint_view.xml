<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="student_complaint_wizard_form_view" model="ir.ui.view">
        <field name="name">student.complaint.wizard.form</field>
        <field name="model">student.complaint.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name_id"/>
                        <field name="student_class"/>
                        <field name="suggestions"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Complaint" name="student_complaint_button"
                            type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
